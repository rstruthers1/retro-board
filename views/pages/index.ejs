<!DOCTYPE html>
<html lang="en">
<head>
    <title>Easy Retro Board: Home</title>
    <% include ../partials/header.ejs %>
</head>
<body style="background-color: #d9ccee">
<% include ../partials/nav.ejs %>
<div class="container">
    <div class="jumbotron text-center">
        <div class="container">
            <h1>Welcome to Easy Retro Board!</h1>
            <p>Easily Do Your Retros Online</p>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <% if (login) {%>
                <div class="row" style="padding-bottom:30px;">
                    <div class="col-md-6 col-sm-offset-2 col-md-offset-3" >
                        <a href="/board-create" class="btn btn-primary btn-block btn-lg">Create a Board</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 col-md-offset-4" >
                        <h2>Your Boards</h2>
                        <% if (boards) { %>
                            <ul>
                            <% for (var i = 0; i < boards.length; i++) {%>
                                <li><a href="board?boardId=<%= boards[i].id%>"><%= boards[i].name %></a></li>
                            <%} %>
                            </ul>
                        <%} else {%>
                            <span>You currently have no boards.</span>
                        <% } %>
                    </div>

                </div>
            <% } else {%>


                <hr style="background-color: #532F8C">


                <div class="row">

                    <div class="col-xs-12 col-md-6"><a href="/login" class="btn btn-primary btn-block btn-lg">Log In</a>
                    </div>

                    <div class="col-xs-12 col-md-6"><a href="/signup" class="btn btn-default btn-block btn-lg">Sign Up</a>
                    </div>
                </div>

                <hr style="background-color: #532F8C">

            <% }%>

        </div>
    </div>
</div>

</body>
</html>