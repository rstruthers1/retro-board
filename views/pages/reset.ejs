<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/header.ejs %>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/additional-methods.min.js"></script>

    <title>Easy Retro Board: Reset Password</title>
    <link rel="stylesheet" type="text/css" href="/css/cmxformTemplate.css"/>
    <link rel="stylesheet" type="text/css" href="/css/cmxformmine.css"/>


    <script>
        $.validator.setDefaults({
        });

        $().ready(function () {

            // validate signup form on keyup and submit
            $("#resetForm").validate({
                rules: {
                    password: {
                        required: true,
                        minlength: 8
                    },
                    confirm_password: {
                        required: true,
                        minlength: 8,
                        equalTo: "#password"
                    }
                },
                messages: {
                    password: {
                        required: "Please provide a password",
                        minlength: "Your password must be at least 8 characters long"
                    },
                    confirm_password: {
                        required: "Please provide a password",
                        minlength: "Your password must be at least 8 characters long",
                        equalTo: "Please enter the same password as above"
                    }
                }
            });
        });
    </script>

    <style>
        body {
            background-color: ivory;
            background-image: url("/images/58-usersthink-stock-image.jpg");
            background-size:     cover;                      /* <------ */
            background-repeat:   no-repeat;
            background-position: center center;              /* optional, center the image */
        }
    </style>

</head>
<body>
<% include ../partials/nav.ejs %>
<div class="container">

    <div class="row" style="padding-top: 30px;">

        <div class="col-md-6 col-sm-offset-2 col-md-offset-3" style="background-color: cornsilk; border-radius: 6px;">

            <form class="cmxform form-inline form-horizontal" id="resetForm" action="/reset" method="post"
                  style="padding-top: 30px">
                <% if (message.length > 0) { %>
                <div class="alert alert-success"><%= message %></div>
                <% } %>
                <fieldset>
                    <legend>Reset Password</legend>
                    <input type="hidden" id="email" name="email" value="<%= user.email %>">
                    <input type="hidden" id="token" name="token" value="<%= user.resetPasswordToken %>">
                    <p>
                        <label for="password">Password</label>
                        <input id="password" name="password" type="password" class="form-control input-sm"
                               style="width: 300px;"  >
                    </p>
                    <p>
                        <label for="confirm_password">Confirm password</label>
                        <input id="confirm_password" name="confirm_password" type="password"
                               class="form-control input-sm" style="width: 300px;">
                    </p>
                    <hr style="background-color: #532F8C">
                    <div class="row">

                        <div class="col-xs-12 col-md-6"><input type="submit" value="Update Password"
                                                               class="btn btn-primary btn-block btn-lg"
                                                               tabindex="7">
                        </div>

                    </div>
                </fieldset>

            </form>
        </div>
    </div>
</div>

</body>
</html>